<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/st_size_32">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/st_size_12"
        android:textSize="22sp"
        android:paddingStart="@dimen/st_size_16"
        android:paddingEnd="@dimen/st_size_16"
        android:clipToPadding="false"
        tools:text="Title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/section_recyclerview"
        tools:listitem="@layout/content_light_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/st_size_16"
        android:paddingEnd="@dimen/st_size_16"
        android:clipToPadding="false"
        android:overScrollMode="never"
        />
</LinearLayout>